FROM elixir:latest

# -------------------------------
# System dependencies
# -------------------------------
RUN apt-get update && apt-get install -y \
    curl \
    wget \
    git \
    build-essential \
    postgresql-client \
    redis-tools \
    inotify-tools \
    && rm -rf /var/lib/apt/lists/*

# -------------------------------
# Node.js for assets
# -------------------------------
RUN curl -fsSL https://deb.nodesource.com/setup_18.x | bash - \
    && apt-get install -y nodejs

# -------------------------------
# Hex and Rebar
# -------------------------------
RUN mix local.hex --force && mix local.rebar --force

# -------------------------------
# Set working directory
# -------------------------------
WORKDIR /app
ENV MIX_ENV=dev

# -------------------------------
# Copy source
# -------------------------------
COPY mix.* ./
COPY config ./config
COPY lib ./lib
COPY priv ./priv
COPY assets ./assets

# -------------------------------
# Install Elixir deps
# -------------------------------
RUN mix deps.get
RUN mix deps.compile

# -------------------------------
# Install Node deps (dev)
# -------------------------------
WORKDIR /app/assets
RUN npm install

# -------------------------------
# Compile assets
# -------------------------------
WORKDIR /app
RUN npm run --prefix ./assets build

# -------------------------------
# Compile Elixir app
# -------------------------------
RUN mix compile

# -------------------------------
# Expose port
# -------------------------------
EXPOSE 4000

# -------------------------------
# Start script
# -------------------------------
COPY start.sh /usr/local/bin/start.sh
RUN chmod +x /usr/local/bin/start.sh
CMD ["/usr/local/bin/start.sh"]
